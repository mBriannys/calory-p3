<h1>Yours Registers</h1>
<%= line_chart Calory.group(:ingested_calories).count %>
<div class="tableS">
  <%= form_tag(index_path, method: :get) do %>
  <div class="show">
    <%= search_field_tag :search, params[:params], placeholder:"comment burned", class: "form-control"%>
    <div class="input-group-btn">
      <%= button_tag "Search", class: 'btn btn-info glyphicon glypicon-search', comment_burned: nil, date: nil%>
    </div>
    <table class="table table-dark table-striped">
      <thead>
        <tr>
          <td>Burned</td>
          <td>Burned Comment </td>
          <td>Ingested</td>
          <td>Ingested Comment</td>
          <td>Create</td>
        </tr>
      </thead>
      <% @calories.each do |calory| %>
          <tr>
            <td><%= calory.burned_calories %></td>
            <td><%= calory.comment_burned %></td>
            <td><%= calory.ingested_calories %></td>
            <td><%= calory.comment_ingested %></td>
            <td><%= calory.created_at %></td>
            <td><%= link_to "Edit", edit_calory_path(calory.id)%></td>
            <td><%= link_to "Show", show_calory_path(calory.id)%></td>
            <td><%= link_to "Destroy", destroy_calory_path(calory.id), method: :delete %></td>
          </tr>
        <% end %>
    </table>
  </div>
  <% end %>
</div>
<%= paginate @calories, :window => 2 %>
